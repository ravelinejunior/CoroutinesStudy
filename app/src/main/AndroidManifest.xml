<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.raveline.coroutinesstudy">

    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.CoroutinesStudy">
        <activity
            android:name=".ui.RetrofitActivity"
            android:exported="true"
            android:label="@string/title_activity_retrofit"
            android:resizeableActivity="true"
            android:theme="@style/Theme.CoroutinesStudy.NoActionBar"
            tools:targetApi="24" />
        <activity
            android:name=".ui.RoomRetrofitActivity"
            android:exported="true" />
        <activity
            android:name=".ui.ThirdNavigationActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".ui.SecondMainActivity"
            android:exported="true" />
        <activity
            android:name=".ui.CoroutinesActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>